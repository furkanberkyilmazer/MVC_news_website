
@model IEnumerable<blogHaber.Models.HaberModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>Kayıt Bulunamadı</h3>
    </div>
}
else
{

    foreach (var i in Model)
    {
   
            <div class="blog">
                <h3 class="page-header">
                    <p>@i.Baslik</p>

                </h3>
                <p>
                    <span class="glyphicon glyphicon-time"></span>
                    @i.EklenmeTarihi
                </p>
                <img class="img-responsive" src="~/Image/@i.Resim" alt="" />
                <hr />
                <p>@i.Aciklama</p>
                @Html.ActionLink("Daha Fazla..", "Details", "Haber", new { id = @i.Id }, new { @class = "btn btn-primary" })
                <!-- <a href="~/Blog/Details?id=@i.Id"><button class="btn btn-primary">Daha Fazla...</button></a>        yukardakiyle aynı işi yapıyor-->
            </div>
        
            }
    
}

