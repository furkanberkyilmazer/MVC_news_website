                @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
            </div>
            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Giris, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.TextAreaFor(model => model.Giris, new { @class = "form-control", id = "summernote3" } )
                
                @Html.ValidationMessageFor(model => model.Giris, "", new { @class = "text-danger" })

            </div>
           
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Govde, htmlAttributes: new { @class = "control-label col-md-2" })
