@model blogHaber.Models.Haber

@{
    ViewBag.Title = "Edit";
}
<!--multi dosya yüklemek için gerekli resim bu proje için-->
<style>
    .dynamicimg {
        height: 100px;
        margin: 10px;
    }
</style>
<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Haber", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Haber</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

